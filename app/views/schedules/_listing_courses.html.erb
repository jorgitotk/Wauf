<% else %>
	<table>
		<thead></thead>
		<tbody>
		  <% courses.each do |c| %>
			  	<tr>
			  		<td>
		      		<%= check_box_tag 'courses[]', c.id, false, id:"course_#{c.id}", disabled: !current_teacher.can_register? %>
